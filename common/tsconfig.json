{
    "compilerOptions": {
        "target": "es2022",
        "lib": [
            "es2023"
        ],
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "skipLibCheck": true,
        "composite": true,
        "paths": {
            "@common/*": [
                "./*"
            ]
        }
    },
}
