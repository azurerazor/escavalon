{
    "compilerOptions": {
        "target": "es2022",
        "lib": [
            "es2023"
        ],
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@common/*": [
                "../../common/dist/*"
            ]
        },
    },
    "references": [
        {
            "path": "../common"
        }
    ],
}
